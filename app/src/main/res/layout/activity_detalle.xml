<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.DetalleActivity"
    android:orientation="vertical"
    android:weightSum="5">

    <TextView
        android:id="@+id/idtxtTitDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:text="@string/titulo_detalle"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <ListView
        android:id="@+id/itemListDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margen_izquierda"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/margen_derecha"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/idbtnActualizar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:onClick="actualizar"
            android:text="Actualizar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="18dp"
            android:layout_margin="15dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/idbtnEliminar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="eliminar"
            android:text="Eliminar"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_margin="15dp" />

    </LinearLayout>

</LinearLayout>