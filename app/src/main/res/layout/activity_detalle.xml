<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.DetalleActivity"
    android:orientation="vertical"
    android:weightSum="5">

    <ListView
        android:id="@+id/itemListDet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margen_izquierda"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/margen_derecha"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/idbtnActualizar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:onClick="actualizar"
            android:text="@string/btnActualizar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/idbtnEliminar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="eliminar"
            android:text="@string/btnEliminar"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_margin="15dp" />

    </LinearLayout>

</LinearLayout>